<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<StackPane fx:id="root" alignment="CENTER" prefHeight="510.0" prefWidth="670.0" styleClass="background" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.iti.chat.viewcontroller.LoginController">
    <children>
        <VBox alignment="CENTER" spacing="20">
            <children>
                <HBox alignment="CENTER">
                    <children>
                        <Circle fx:id="logoImage" fill="#1f93ff00" radius="79.0" stroke="#4c84ff" strokeType="INSIDE" strokeWidth="10.0" />
                    </children>
                </HBox>
            <HBox alignment="CENTER">
               <children>
                  <VBox alignment="CENTER" styleClass="login_container" stylesheets="@RegisterScreen.css">
                     <children>
                            <TextField fx:id="phoneTextField" maxHeight="45.0" maxWidth="300.0" minHeight="45.0" minWidth="300.0" prefHeight="45.0" prefWidth="300.0" promptText="Phone number" styleClass="text-field">
                           <VBox.margin>
                              <Insets bottom="7.0" top="5.0" />
                           </VBox.margin>
                        </TextField>
                            <PasswordField fx:id="passwordField" maxHeight="45.0" maxWidth="300.0" minHeight="45.0" minWidth="300.0" prefHeight="45.0" prefWidth="300.0" promptText="Password" styleClass="text-field">
                           <VBox.margin>
                              <Insets bottom="7.0" top="7.0" />
                           </VBox.margin>
                        </PasswordField>
                            <Button fx:id="logInButton" maxHeight="45.0" maxWidth="300.0" minHeight="45.0" minWidth="300.0" mnemonicParsing="false" onAction="#login" prefHeight="45.0" prefWidth="300.0" styleClass="main_button" text="Log in">
                                <font>
                                    <Font name="System Bold" size="18.0" />
                                </font>
                           <VBox.margin>
                              <Insets bottom="5.0" top="5.0" />
                           </VBox.margin>
                            </Button>
                            <HBox alignment="CENTER" spacing="62">
                                <children>
                                    <CheckBox mnemonicParsing="false" text="Remember me" />
                                    <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="warningMsg" />
                                    <Hyperlink onAction="#register" styleClass="hyperlink" text="Register?">
                                        <font>
                                            <Font name="System Bold" size="13.0" />
                                        </font>
                                    </Hyperlink>
                                </children>
                           <VBox.margin>
                              <Insets top="10.0" />
                           </VBox.margin>
                            </HBox>
                     </children>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <padding>
                        <Insets bottom="25.0" left="20.0" right="20.0" top="25.0" />
                     </padding>
                  </VBox>
               </children>
            </HBox>
            </children>
        </VBox>

    </children>
    <stylesheets>
        <URL value="@RegisterScreen.css">

        </URL>
    </stylesheets>
</StackPane>
